<p id="notice"><%= notice %></p>

<h1>Builds</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Text</th>
      <th>Tags</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @active_builds.each do |build| %>
      <tr>
        <td><%= build.title %></td>
        <td><%= build.text %></td>
        <td><%= build.tags %></td>
        <td><%= link_to 'Show', build %></td>
        <td><%= link_to 'Edit', edit_activeBuild_path(build) %></td>
        <td><%= link_to 'Destroy', build, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Build', new_activeBuild_path %>
